.container
  - @board.errors.full_messages.each do |message|
    %ul
      %li= message
  %h1 Edit Board
  = form_with(model: @board, url: board_path(@board.id), local: true, method: 'patch') do |f|
    %div
      = f.label :name, 'Name'
    %div
      = f.text_field :name
    %div
      = f.label :description, 'Description'
    %div
      = f.text_area :description, class: 'textarea'
    %div
      = f.submit 'Submit', class: 'btn-primary'
