<div class="container">
  <div class="board">
    <div class="board_title">
      <h1><%= @board.name %></h1>    
    </div>
    <div class="board_content">
      <p><%= @board.description %></p>
    </div>
    <% if user_signed_in? && current_user.has_written?(@board) %>
      <div class="board_select">
        <p><%= link_to 'edit', edit_board_path(@board.id)%></p>
        <p><%= link_to 'delete', board_path, local: true, data: { method: 'delete'} %></p>
      </div>
    <% end %>
  </div>
</div>